<section class="bg-dark row">
    <section class="col-md-3 ms-4 mb-3 text-center">
        <h1 class="border dynamic-header">
            The Blog
        </h1>
    </section>
</section>

<main class="container-fluid mt-3">

    <section class="row justify-content-center text-start">

        <section class="col-md-10 justify-content-center text-start align-items-center">

            <section class="row row-cols-1 row-cols-lg-1 g-4 m-4">


                <section class="card mt-3 mb-1 px-0">
                    <section class="card-header text-start">
                        <h4 class="d-inline">{{post.post_title}}</h4>
                        <h6 class="d-inline float-end">Posted by {{user.username}} on
                            {{format_date post.date_created}}</h6>
                    </section>
                    <section class="card-body text-start">
                        <p class="d-inline">{{post.post_content}}</p>
                        {{#if logged_in}}
                        <button id="add" class="btn btn-primary d-inline float-end">Add Comment</button>
                        {{/if}}
                    </section>
                </section>

                <section id="comment-sect">
                    {{#each post.comments as |comment|}}
                    <section class="card mt-1 mb-1 px-0">
                        <section class="card-header text-start">
                            <h4 class="d-inline">Comment by: {{user.username}}</h4>
                            <h6 class="d-inline float-end">Posted on {{format_date date_created}}</h6>
                        </section>
                        <section class="card-body text-start">
                            <p>{{comment_message}}</p>
                        </section>
                    </section>
                    {{/each}}
                </section>

                <section id="add-sect" >
                    <section class="card mt-1 mb-1 px-0">
                        <section class="card-header text-start">
                            <h4 class="d-inline">Write your comment below</h4>
                        </section>
                        <section class="card-body text-start">
                            <section class="mb-3">
                                <label for="signupUsername" class="form-label">Comment:</label>
                                <input type="text" class="form-control" id="comment-message">
                            </section>
                            <button id="addComment" class="btn btn-primary d-inline float-end">Submit</button>
                        </section>
                    </section>
                </section>


            </section>

        </section>

    </section>

</main>
<script src="/js/single-post.js"></script>