<section class="bg-dark row">
    <section class="col-md-4 ms-4 mb-3 text-center">
        <h1 class="border dynamic-header">
            Your Dashboard
        </h1>
    </section>
</section>

<main class="container-fluid mt-3">

    <section class="row justify-content-center text-start">

        <section class="col-md-10 justify-content-center text-start align-items-center">

            <section class="row row-cols-1 row-cols-lg-1 g-4 m-4">
                {{#each posts as |post|}}

                <section class="card mt-3 mb-3 px-0">
                    <section class="card-header text-start">
                        <h4 class="d-inline">{{post.post_title}}</h4>
                        <h6 class="d-inline float-end">Posted on
                            {{format_date post.date_created}}</h6>
                        <a href="dashboard/edit/{{post.id}}" class="stretched-link"></a>
                    </section>
                </section>
                {{/each}}

            </section>

        </section>

        <section class="position-relative  mt-3">
            <button id="addPost" class="position-absolute bottom-0 start-50 translate-middle-x btn btn-secondary">Add
                Post</button>
        </section>

    </section>

</main>



<script src="/js/dashboard.js"></script>